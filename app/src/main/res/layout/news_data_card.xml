<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="15dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:cardBackgroundColor="@color/mid_grey"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="208dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/bookmark_btn"
            android:layout_margin="10dp"
            app:cardElevation="3dp"
            android:layout_gravity="end|top"
            android:layout_width="35dp"
            android:layout_height="34dp"
            app:cardBackgroundColor="@color/deep_grey"
            app:cardCornerRadius="5dp">

            <ImageView

                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_unfilled">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/ic_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title"
        android:textSize="23sp"
        android:lineSpacingExtra="10dp"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:fontFamily="@font/queenspark_bold"
        android:text="@string/demo_text"/>

    <TextView
        android:id="@+id/description"
        android:textSize="21sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginTop="1dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:fontFamily="@font/queenspark"
        android:textColor="@color/light_dark"
        android:text="@string/demo_text"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="@font/source_sans_pro"
        android:text="29-03-21"
        android:textColor="@color/deep_grey"/>

    <GridLayout
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/read_btn"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_bg"
            android:text="Read"
            android:textSize="16sp"
            android:fontFamily="@font/source_sans_pro"
            android:layout_width="102dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_row="0"/>

        <Button
            android:layout_marginBottom="5dp"
            android:id="@+id/save_btn"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button_bg"
            android:text="Save"
            android:fontFamily="@font/source_sans_pro"
            android:layout_width="102dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="0"/>


    </GridLayout>


</LinearLayout>